<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegesiteActivity">

    <Button
        android:id="@+id/RegesiteActivity_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="返回" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="152dp"
        android:text="账号："
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="77dp"
        android:layout_height="39dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:text="密码："
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/RegesiteActivity_txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="21dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/RegesiteActivity_txtUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/RegesiteActivity_txtUserName"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/RegesiteActivity_ok"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RegesiteActivity_txtUserPassword"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="29dp"
        android:text="确定" />

    <Button
        android:id="@+id/RegesiteActivity_reset"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RegesiteActivity_txtUserPassword"
        android:layout_alignEnd="@+id/RegesiteActivity_txtUserPassword"
        android:layout_marginStart="90dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/RegesiteActivity_ok"
        android:text="重置" />
</RelativeLayout>